{
  "appenders": [
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "dateFile",
          "filename": "./log/access.log",
          "pattern": "-yyyy-MM-dd",
          "category": "http",
          "encoding": "utf-8"
        },
        {
          "type": "file",
          "filename": "./log/app.log",
          "maxLogSize": 10485760,
          "numBackups": 3,
          "encoding": "utf-8"
        },
        {
          "type": "logLevelFilter",
          "level": "ERROR",
          "appender": {
            "type": "file",
            "filename": "./log/errors.log",
            "encoding": "utf-8"
          }
        },
        {
          "type": "stdout"
        }
      ]
    }
  ]
}
